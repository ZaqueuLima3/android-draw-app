<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/fl_drawing_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/bg_drawing_view_layout"
        android:padding="1dp"
        app:layout_constraintBottom_toTopOf="@+id/ib_colors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="background_image"
            android:scaleType="centerCrop"
            tools:src="@mipmap/image" />

        <com.example.drawingapp.DrawingView
            android:id="@+id/drawing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80FFFFFF" />

    </FrameLayout>


    <ImageButton
        android:id="@+id/ib_colors"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:contentDescription="brush image"
        android:src="@drawable/ic_color"
        app:layout_constraintBottom_toBottomOf="@+id/ib_gallery"
        app:layout_constraintEnd_toStartOf="@+id/ib_brush"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ib_gallery"
        app:layout_constraintTop_toTopOf="@+id/ib_gallery"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/ib_gallery"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:contentDescription="brush image"
        android:src="@drawable/ic_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ib_colors"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/ib_remake"
        app:layout_constraintTop_toBottomOf="@+id/fl_drawing_view_container" />

    <ImageButton
        android:id="@+id/ib_brush"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:contentDescription="brush image"
        android:src="@drawable/ic_brush"
        app:layout_constraintBottom_toBottomOf="@+id/ib_colors"
        app:layout_constraintEnd_toStartOf="@+id/ib_undo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ib_colors"
        app:layout_constraintTop_toTopOf="@+id/ib_colors"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/ib_undo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="undo image"
        android:scaleType="fitXY"
        android:src="@drawable/ic_undo"
        app:layout_constraintBottom_toBottomOf="@+id/ib_brush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ib_brush" />

    <ImageButton
        android:id="@+id/ib_remake"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:contentDescription="remake image"
        android:scaleType="fitXY"
        android:src="@drawable/ic_remake"
        app:layout_constraintBottom_toBottomOf="@+id/ib_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ib_gallery" />


</androidx.constraintlayout.widget.ConstraintLayout>